# Django Converter Site - Production Environment Configuration
# Copy this file to .env and adjust the values for your production environment

# ===================
# BASIC DJANGO SETTINGS
# ===================

# Generate a new secret key for production: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-secret-key-here

# Set to False in production
DEBUG=False

# ===================
# HOST AND SECURITY SETTINGS
# ===================

# Comma-separated list of allowed hosts
ALLOWED_HOSTS=your-domain.com,www.your-domain.com

# Comma-separated list of trusted origins for CSRF
CSRF_TRUSTED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# SSL and security settings
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000

# ===================
# STATIC AND MEDIA FILES
# ===================

# Static files configuration
STATIC_URL=/static/
STATIC_ROOT=staticfiles

# Media files configuration
MEDIA_URL=/media/
MEDIA_ROOT=media

# Upload limits (in MB)
MAX_UPLOAD_SIZE=500
FILE_UPLOAD_MAX_MEMORY_SIZE=10
DATA_UPLOAD_MAX_MEMORY_SIZE=10

# ===================
# TEMPORARY FILES AND CLEANUP
# ===================

# Temporary directory for processing
TEMP_DIR=temp

# File retention periods (in seconds)
TEMP_FILE_MAX_AGE=3600      # 1 hour
MEDIA_FILE_MAX_AGE=86400    # 24 hours

# ===================
# VIDEO PROCESSING SETTINGS
# ===================

# FFmpeg binary path (adjust for your system)
FFMPEG_BINARY=/usr/bin/ffmpeg

# Processing timeouts and limits
VIDEO_PROCESSING_TIMEOUT=300
AUDIO_MAX_DURATION=3600

# ===================
# SPEECH-TO-TEXT SETTINGS
# ===================

# STT Engine: whisper, google
STT_ENGINE=whisper

# Whisper model settings
WHISPER_MODEL=base
WHISPER_DEVICE=auto
WHISPER_COMPUTE_TYPE=int8

# ===================
# DATABASE CONFIGURATION
# ===================

# For SQLite (default)
# DATABASE_URL=sqlite:///./db.sqlite3

# For PostgreSQL (recommended for production)
# DATABASE_URL=postgresql://username:password@localhost:5432/converter_db

# For MySQL
# DATABASE_URL=mysql://username:password@localhost:3306/converter_db

# ===================
# CACHE CONFIGURATION (Optional)
# ===================

# Redis cache (recommended for production)
# CACHE_URL=redis://localhost:6379/1

# Memcached
# CACHE_URL=memcached://localhost:11211

# ===================
# CELERY CONFIGURATION (For async processing)
# ===================

# Enable Celery for production (set to False for sync processing)
# CELERY_TASK_ALWAYS_EAGER=False

# Redis broker
# CELERY_BROKER_URL=redis://localhost:6379/0
# CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ===================
# EMAIL CONFIGURATION (Optional)
# ===================

# SMTP settings for error notifications
# EMAIL_HOST=smtp.your-domain.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@your-domain.com
# EMAIL_HOST_PASSWORD=your-email-password
# DEFAULT_FROM_EMAIL=noreply@your-domain.com
# SERVER_EMAIL=server@your-domain.com

# ===================
# AWS S3 CONFIGURATION (Optional)
# ===================

# Use AWS S3 for media storage in production
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_STORAGE_BUCKET_NAME=your-bucket-name
# AWS_S3_REGION_NAME=us-east-1
# AWS_S3_CUSTOM_DOMAIN=your-bucket-name.s3.amazonaws.com

# ===================
# MONITORING AND LOGGING (Optional)
# ===================

# Sentry for error tracking
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
# LOG_LEVEL=INFO

# ===================
# SOCIAL AUTH (Optional)
# ===================

# Google OAuth
# GOOGLE_OAUTH2_CLIENT_ID=your-google-client-id
# GOOGLE_OAUTH2_CLIENT_SECRET=your-google-client-secret

# ===================
# API KEYS (Optional)
# ===================

# Google Cloud Speech-to-Text API
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# ===================
# PERFORMANCE SETTINGS
# ===================

# Database connection settings
# DB_CONN_MAX_AGE=60
# DB_CONN_HEALTH_CHECKS=True

# Session settings
# SESSION_COOKIE_AGE=1209600  # 2 weeks
# SESSION_SAVE_EVERY_REQUEST=False

# ===================
# BACKUP CONFIGURATION (Optional)
# ===================

# Backup settings for automated backups
# BACKUP_SCHEDULE=daily
# BACKUP_RETENTION_DAYS=30
# BACKUP_S3_BUCKET=your-backup-bucket

# ===================
# CORS SETTINGS (If needed for API)
# ===================

# CORS_ALLOWED_ORIGINS=https://your-frontend-domain.com
# CORS_ALLOW_CREDENTIALS=True
