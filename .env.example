SECRET_KEY=django-insecure-pil_my+-p)h2j$x_d4k2bas!1af0#hyucn12rso=#ka$iiv$b(
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Настройки базы данных (SQLite по умолчанию)
DATABASE_URL=sqlite:///db.sqlite3

# Настройки Redis и Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Настройки STT (Speech-to-Text)
STT_ENGINE=whisper
# Возможные значения: whisper, google
# При whisper используется faster-whisper для локальной обработки
# При google используется Google Speech Recognition API (требует интернет)

# Настройки Whisper
WHISPER_MODEL=base
# Возможные модели: tiny, base, small, medium, large-v2, large-v3
# Больше модель = лучше качество, но медленнее и больше памяти

WHISPER_DEVICE=auto
# Возможные значения: auto, cpu, cuda
# auto - автоматический выбор (cuda если доступно, иначе cpu)

WHISPER_COMPUTE_TYPE=int8
# Возможные значения: float16, int8, int8_float16
# int8 - экономит память, float16 - лучше качество

# Пути к исполнимым файлам
FFMPEG_BINARY=ffmpeg
# Путь к ffmpeg. На Windows может быть полный путь: C:\ffmpeg\bin\ffmpeg.exe
# На Linux/Mac обычно просто: ffmpeg

# Настройки файлов
MEDIA_MAX_SIZE=500
# Максимальный размер файла в МБ

AUDIO_MAX_DURATION=3600
# Максимальная длительность аудио в секундах (3600 = 1 час)

# Настройки безопасности (для продакшена изменить!)
SECURE_SSL_REDIRECT=False
SECURE_BROWSER_XSS_FILTER=True
SECURE_CONTENT_TYPE_NOSNIFF=True
X_FRAME_OPTIONS=DENY

# Логирование
LOG_LEVEL=INFO
# Возможные уровни: DEBUG, INFO, WARNING, ERROR, CRITICAL
